<%= stylesheet('bootstrap','style','group')%>
<div id="main">
	<div  class="container">
		<ul class="nav nav-pills">
		    <li>
		    	<%= link_to '推荐话题', recommend_topic_path %>
		    </li>
		    <li><%= link_to '关注人的动态', recommend_user_path %></li>
		    <li class="active"><%= link_to '推荐小组', recommend_group_path %></li>
	    </ul>

	    <ul>
		<% @groups.each_with_index do |group,i| %>
			<%= li_css(i,3) %>
				<a href="/groups/<%= group.id%>/topics" class="grp-icon">
				<% if group.icon.exists? %>
							<%= image_tag group.icon.url(:original) %>
						<% else %>
							<%= image_tag 'no_pic.png' %>
						<% end %>	
				</a>
				<h4><%= link_to group.name,"/groups/#{group.id}/topics" %></h4>
				<p><%= truncate group.descrip, :length => 20 %></p>
			</li>
		<% end %>
		</ul>

	</div>
	<%= will_paginate @groups, :previous_label =>'上一页', :next_label => '下一页' %>
</div>
