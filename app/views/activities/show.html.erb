<div id="main">
  <div class="container">
    <%= render 'public/flash_notice' %>

    <div class="comm-left">
      <div class="tr-item cc">
        <div class="avatar">
          <%if @activity.user.icon.exists? %>
            <%= image_tag @activity.user.icon.url(:medium), alt: @activity.user.nickname %>
          <% else %>
            <%= iamge_tag 'avatar.jpg', alt: @activities.user.nickname %>
          <% end %>
        </div>
        <div class="topic-box">
          <h1><%= @activity.title %></h1>
          <div class="topic-info">
            <p>
              <%= link_to @activity.user.nickname, user_path(@activity.user) %>
              发表于：
              <%= timeago_tag @activity.created_at, nojs: true, limit: 10.days.ago %>
            </p>
          </div>
          <div class="c"></div>
          <div>
            <%= image_tag @activity.icon.url(:original) %> 
          </div>
          <div class="content">
            <%= raw @activity.content %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
