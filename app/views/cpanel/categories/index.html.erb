<div class="row">
  	<div class="span9">


  		<button type="button" data-toggle="modal" class="btn btn-primary" data-target="#category_form">新增</button>

  		<%= render 'form', category: @category %>

    	<table class="table table-striped">
    		<thead>
				<tr>
					<th><%= check_box_tag 'checkbox_all' %>全选/取消</th>
					<th>分类ID</th>
					<th>分类名</th>
					<th>描述</th>
					<th>是否可用</th>
					<th>创建时间</th>
					<th>结束时间</th>
					<td>操作</td>
				</tr>
			</thead>
    		<% @categories.each do |category| %>
    		<tbody>
				<tr>
					<td><%= check_box_tag 'checkbox_name', category.id %></td>
					<td><%= category.id %></td>
					<td><%= category.name %></td>
					<td><%= truncate category.description, :length => 10 %></td>
					<td>
						<% if category.is_use %>
							可用
						<% else %>
							不可用
						<% end -%>
					</td>
					<td><%= format_datetime category.created_at,'%Y-%m-%d %H:%M' %></td>
					<td><%= format_datetime category.updated_at,'%Y-%m-%d %H:%M' %></td>
					
					<td>
						<%= link_to '查看'%>
						
						<a href="#" id="edit_category" data-id="<%= category.id %>" >修改</a>
						<%= link_to '删除', [:cpanel, category], confirm: '确认删除吗？', method: :delete %>
						<% if category.is_use %>
							<%= link_to '置为不可用', change_use_cpanel_category_path(category) %>
						<% else %>
							<%= link_to '置为可用', change_use_cpanel_category_path(category) %>
						<% end %>
					</td>
				</tr>
			</tbody>
    		<% end -%>
		</table>
  	</div>
</div>
<script type="text/javascript">

$(function(){
	$("#edit_category").click(function(){

		var id = $(this).attr('data-id');
		console.log(id);
		var url = "/cpanel/categories/" + id + "/edit";
		console.log(url);
		$.ajax({
			type : "get",
			url : url,
			success : function(data){
				var category = eval(data);
				
			}
		});
		    
	});
});
</script>