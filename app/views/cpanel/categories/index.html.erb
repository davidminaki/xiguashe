<div class="row">
  	<div class="span9">


  		<button type="button" data-toggle="modal" class="btn btn-primary" data-target="#add_category">新增</button>

  		<%= form_for @category, :url => { :action => "create" }, :html => {:class => 'form-vertical'} do |f|%>
  		<div id="add_category" class="modal hide">
  			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h3 id="add_category_label">新增分类</h3>
			</div>
			<div class="modal-body">
				<p>
					<%= f.hidden_field :id %>
					<%= f.label :分类名称,:class => 'control-label'%> 
					<div class="controls"><%= f.text_field :name %></div>

					<%= f.label :分类描述,:class => 'control-label' %> 
					<div class="controls"><%= f.text_area :description ,:cols  =>40,:rows  => 5%></div>
				</p>
			</div>
  			<div class="modal-footer">
				<button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
				<%= button_tag "保存", class: "btn btn-primary" %>
			</div>
  		</div>
  		<% end -%>

    	<table class="table table-striped">
    		<thead>
				<tr>
					<th><%= check_box_tag 'checkbox_all' %>全选/取消</th>
					<th>分类ID</th>
					<th>分类名</th>
					<th>描述</th>
					<th>是否可用</th>
					<th>创建时间</th>
					<th>结束时间</th>
					<td>操作</td>
				</tr>
			</thead>
    		<% @categories.each do |category| %>
    		<tbody>
				<tr>
					<td><%= check_box_tag 'checkbox_name', category.id %></td>
					<td><%= category.id %></td>
					<td><%= category.name %></td>
					<td><%= truncate category.description, :length => 10 %></td>
					<td>
						<% if category.is_use %>
							可用
						<% else %>
							不可用
						<% end -%>
					</td>
					<td><%= format_datetime category.created_at,'%Y-%m-%d %H:%M' %></td>
					<td><%= format_datetime category.updated_at,'%Y-%m-%d %H:%M' %></td>
					
					<td>
						<%= link_to '查看'%>
						<%= link_to '修改'%>
						<%= link_to '删除'%>
						<% if category.is_use %>
							<%= link_to '置为不可用' %>
						<% else %>
							<%= link_to '置为可用' %>
						<% end %>
					</td>
				</tr>
			</tbody>
    		<% end -%>
		</table>
  	</div>
</div>