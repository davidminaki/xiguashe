<%= form_for [:cpanel, @product], :html => {role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :商品名称 %>
    <%= f.text_field :title, value: @product.title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :评价 %>
    <%= f.text_area :appraisal, rows: 5, value: @product.appraisal, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :价格 %>
    <%= f.text_field :price, value: @product.price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, value: @product.url, class: 'form-control' %>
  </div>
  
  
  <div class="good-photos">
    <ul class="cc">
      <% @product.photos.each do |photo| %>
        <li>
          <%=  photo_choose_helper(photo) %> <br>
          <%= link_to '', '',class: 'glyphicon glyphicon-remove-circle'%>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="form-group">
    <%= f.submit '提交', class: 'btn btn-primary'%>
    <%= link_to '返回', cpanel_products_path, class: 'btn' %>
  </div>
<% end %>
