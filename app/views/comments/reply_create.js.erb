


var r = $("#comment-replies-<%= @comment.id%> > .reply-item").last();

if(r.length > 0)
{
	r.after("<%= escape_javascript(render('comments/replies', :r => @reply, :c => @comment)) %>");
}
else
{
	$("#comment-replies-<%= @comment.id%>").html("<%= escape_javascript(render('comments/replies', :r => @reply, :c => @comment)) %>");
}

$(".reply-form > form > textarea").val('');