<div class="post-comment">
  <% if !current_user %>
		<p>登录后可进行评论，请先 <%= link_to '登录', login_path %> 或 <%= link_to '注册', reg_path %></p>
  <% else %>
    <%= form_for [item, Comment.new] do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, id: 'user_id', value: current_user.id %>
        <%= f.hidden_field :topic_id, :id => 'topic_id', :value => item.id %>
        <%= f.text_area :content, id: 'comment-textarea', rows: 3, class: 'form-control', placeholder: '小伙伴吐槽下吧.....' %>
      </div>
      <%= f.submit '发表', class: 'btn btn-primary' %>
    <% end %>
  <% end %> 
</div>
