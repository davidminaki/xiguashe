
<% @comments.each do |comment| %>
	<div class="tr-item cc">
		<div class="avatar">
			<%if comment.user.icon.exists? %>
		        <%= image_tag comment.user.icon.url(:thumb) ,:alt => comment.user.nickname%>
		      <%else%>
		        <%= image_tag 'avatar.png' ,:alt => comment.user.nickname%>
		      <%end%>
		</div>
		<div class="topic-box">
			<div class="topic-info">
				<p><a href=""><%= comment.user.nickname %></a> 发表于：<%= timeago_tag comment.created_at, :nojs => true, :limit => 10.days.ago %></p>
			</div>
			<div class="content">

				<p><%= raw comment.content %></p>

			</div>
		</div>
	</div>
<% end -%>


