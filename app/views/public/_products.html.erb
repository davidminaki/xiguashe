<li>
  <div class="good-img">
    <%= link_to product_img_helper(product.img),  product %>
    <span></span>
    <em>
      <%= number_to_currency product.price, unit: product.money_logo %>
     </em>
  </div>
  <div class="good">
    <h3><%= link_to product.title, product %></h3>
    <blockquote>
      <%= link_to user_avatar_helper(product.user), product.user, class: 'avatar', title: product.user.nickname %>
      <%= truncate product.appraisal, length: 30 %>
    </blockquote>
    
    <footer class="cc">
      <%if product.reply_num > 0%>
      <cite>评论 <%= product.reply_num%></cite>
      <%end%>
    </footer>
    
  </div>
</li>
