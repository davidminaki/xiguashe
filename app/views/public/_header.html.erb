<div id="header">
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	  
	      <a href="/" class="brand">西瓜社</a>
	      <div class="nav-collapse">
	        <ul class="nav">
	          <li><a href="/" target="_blank">首页</a></li>
	
	          <li><a href="/" target="_blank">小组</a></li>
	          <li><a href="/" target="_blank">话题</a></li>
	        </ul>
	      </div>

	      <form action="/search"  method="get" class="navbar-search pull-left">
            <%= text_field_tag :query, params[:query], :class => "span3", :placeholder => " 搜索其实很简单... " %>
          </form>

          <p class="navbar-text pull-right">
          	<% if current_logined? %>
          		<% if current_user.icon.exists? %>
					<%= image_tag current_user.icon.url(:thumb), :class => 'img-rounded' %>
				<% else %>
					<%= image_tag 'no_pic.png', :class => 'img-circle' %>
				<% end -%>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						<%= current_user.username %>
					<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to '个人资料修改', edit_user_path(current_user) %></li>
						<li><%= link_to '退出', quit_path %></li>
					</ul>
				</li>
          	<% else %>
          	  <a href="#">登录</a>
          	  <a href="#" class="active">注册</a>
          	<%end%>  
          </p>
	    </div>
	  </div>
	</div>
</div>