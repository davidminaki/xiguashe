<header role="banner" class="navbar xgs-inverse bs-docs-nav ">
  <div class="home-index">
    <div class="navbar-header">
      <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('logo.png', alt: 'logo'), root_path, class: 'logo' %>
      <%= link_to '西瓜社', root_path, class: 'navbar-brand' %>
    </div>
    <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">
      <ul class="nav navbar-nav xgs-nav">
        <%= nav_helper(params[:controller]) %>
      </ul>
      <div class="search-box">
        <%= form_tag '/search/topics', method: :get do %>
          <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: '搜索其实很简单......'%>
        <% end %>
      </div>
  
    </nav>
    <ul class="nav navbar-nav pull-right sign-up">
      <% if current_logined? %>
        <li class="msg"><a href="/users/<%=current_user.id%>/notifications"><span><%= current_user.unread_notification_count %></span></a></li>
      
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.nickname %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to '我的主页', current_user %></li>
            <li><%= link_to '修改资料', edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <% if current_user.is_admin? %>
                <%= link_to '写点文章', new_topic_path%>
              <% end%>
            </li>
            <li><%= link_to '发布东西', url_products_path%></li>
            <li class="divider"></li>
            <li>
              <%if current_user.is_admin? %>
                <%= link_to '后台管理', cpanel_products_path %>
              <% end %>
            </li>
            <li><%= link_to '退出登录', quit_path %></li>
	        </ul>
        </li>
      <% else %>
        <li><%= link_to '注册', reg_path %></li>
        <li><%= link_to '登录', login_path %></li>
      <% end %>
    </ul>
  </div>
</header>



