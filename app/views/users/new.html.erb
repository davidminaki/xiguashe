<div class="home-index">
  <div class="row">
    <div class="col-xs-12">
      <div class="login-reg xgs-form">
        <div class="col-xs-offset-2">
          <h1>用户注册</h1>
        </div>
        <div class="login-reg-content">
          <%= form_for @user, html: { class: 'form-horizontal', role: 'form'} do |f| %>
            <div class="form-group">
              <%= f.label :nickname, '昵称', class: 'col-sm-2 control-label'%>
              <div class="col-sm-5">
                <%= f.text_field :nickname, class: 'form-control', placeholder: '请填写您的昵称' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, '登录邮箱', class: 'col-sm-2 control-label' %>
              <div class="col-sm-5">
                <%= f.text_field :email, class: 'form-control', placeholder: '请填写您的邮箱地址' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, '登录密码', class: 'col-sm-2 control-label' %>
              <div class="col-sm-5">
                <%= f.password_field :password, class: 'form-control', placeholder: '请填写您的密码' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit '注册', class: 'btn btn-primary'%>
                <%= link_to '登录', login_path, class: 'btn btn-default' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
