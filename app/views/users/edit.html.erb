<div id="main">
  <div class="comm-form">
    <h2 class="title">更新资料</h2>
    <%= form_for @user, :html => { :class => "form-horizontal"} do |f| %>
      
      <div class="control-group">
        <label for="" class="control-label">旧密码</label>
        <div class="controls">
          <%= f.password_field :old_password,:class => 'txt' %>
        </div>
      </div>
       <div class="control-group">
        <label for="" class="control-label">新密码</label>
        <div class="controls">
          <%= f.password_field :password,:class => 'txt' %>
        </div>
      </div>
      <div class="control-group">
        <label for="" class="control-label">确认密码</label>
        <div class="controls">
          <%= f.password_field :password_confirmation,:class => 'txt' %>
        </div>
      </div>

      <div class="control-group">
          <label for="" class="control-label">用户头像</label>
          <div class="controls">
            <a class="btn-add-pic" href="javascript:void(0);"><span><em>+</em>添加图片</span> 
              <%= f.file_field :icon, :class => 'file-prew',:title=>'支持jpg、jpeg、gif、png格式，文件小于5M' %>
              </a>
          </div>
      </div>
      <%if @user.errors.any?%>
          <div class="msgs-box">
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li>* <%= msg%></li>
            <% end %>

            
            
          </ul>
        </div>
      <% end %>
      <%if flash[:notice] %>
      <div class="msgs-box">
        <ul>
          <li>* <%= flash[:notice]%></li>
        </ul>
      </div>
      <%end %>


      <div class="form-actions">
        <%= button_tag "更新",:class=>'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>