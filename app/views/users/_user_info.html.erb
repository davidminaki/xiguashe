<div class="user-box">
	<div class="avatar">
	  <%if !@user.avatar.nil? %>
       <%= image_tag(@user.avatar.url('100x100'))%>
      <%else%>
        <%= image_tag 'avatar.png' ,:alt => @user.nickname%>
      <%end%>

	</div>
	<div class="user-info">
		<h4><%= @user.nickname%></h4>
		
		
		
		<div class="user-nav">
			<%= user_nav @user, params[:action]%>
	

		</div>
	</div>
	<div class="follow-box">
		<%= render :partial => 'follow_unfollow',:locals  => {:user  => @user} %> 
	</div>
	<div class="c"></div>
</div>