<div class="tab-pane active" id="password">
  <%= form_for user, html: { class: 'form form-horizontal', role: 'form' } do |f| %>
    <div class="form-group">
      <div class="col-md-5">
        <div class="avatar">
          <%= user_avatar_helper(user) %>
          <%= f.file_field :avatar, class: 'file-inputs btn btn-default', title: '修改头像' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-5">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class: 'form-control col-xs-4'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-5">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-5">
      </div>
    </div>
    <%= hidden_field_tag 'do',  'profile' %>
    <%= f.submit '提交', class: 'btn btn-primary' %>
  <% end %>
</div>
<script>
  $(function() {
    $('.file-inputs').bootstrapFileInput();
  })
</script>
