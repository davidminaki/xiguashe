<div id="main">
	<div class="groups-box">
		<h2>活跃小组</h2>
		<ul>
		<%@active_groups.each do |active_group|%>
			<li>
				<% if active_group.icon.exists? %>
					<%= image_tag active_group.icon.url(:original) %>
				<% else %>
					<%= image_tag 'no_pic.png' %>
				<% end %>
				
				<h4><%=link_to active_group.name,"/groups/#{active_group.id}/topics"%></h4>

			</li>
		<%end%>
		</ul>
		<h2>所有小组</h2>
		<ul>
		<%@groups.each do |group|%>
			<li>
				<% if group.icon.exists? %>
					<%= image_tag group.icon.url(:original) %>
				<% else %>
					<%= image_tag 'no_pic.png' %>
				<% end %>
				
				<h4><%=link_to group.name,"/groups/#{group.id}/topics"%></h4>

			</li>
		<%end%>
		</ul>
		<%= link_to '申请创建小组', new_group_path %>
		
	</div>
</div>