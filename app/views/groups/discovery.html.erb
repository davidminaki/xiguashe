<%= stylesheet('bootstrap','style','group')%>
<div id="main">
	<div class="contaier">
		<div class="title-box cc">
			<h4 class="fl">发现小组 ... </h4>
			<div class="grp-cats">
				<% @categories.each do |category| %>
				<%= link_to category.name, discovery_category_groups_path(category) %>
				<% end -%>
			</div>
			<%= link_to '创建小组', new_group_path, :class => 'btn btn-primary opt-btn' %>
		</div>

		

		<div class="group-list  cc mt10">
			<%= render :partial => 'public/groups',:locals  => {:groups  => @groups}%>
		</div>
		<%= will_paginate @groups, :previous_label =>'上一页', :next_label => '下一页' %>
	</div>
</div>