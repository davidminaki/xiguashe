<!DOCTYPE html>
<html>
<head>
  <title><%= t(:web_title)%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
    <div class="navbar-inner">
	    <div class="container">

	    	<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
	    	</a>

	    	<a class="brand" href="#">西瓜社</a>

	        <div class="nav-collapse collapse">
	       		
			    <ul class="nav pull-right">
					<li>
					<li>
						<form class="navbar-search pull-right" action="/search"  method="get">

			       			<p>
								<%= text_field_tag :query, params[:query], :class => "search-query", :placeholder => " 搜索话题或内容 " %>
							</p>
					    	
					    </form>
					</li>	
					<li class="divider-vertical"></li>
					<% if current_logined? %>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<%= current_user.username %>
							<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to '退出', quit_path %></li>
							</ul>
						</li>

					<% else %>
						<li><%= link_to '登陆', new_session_path %></li>
						<li><%= link_to '注册', reg_path %></li>
					<% end -%>
					
				</ul>
	        </div>
	        
	    </div>
    </div>
</div>


<div class="container">

	<%= yield %>

</div>


</body>
</html>
