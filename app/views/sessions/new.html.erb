<div id="main">
<%= form_tag  sessions_path ,:class => 'form-vertical' do %>
  <%if flash[:notice]%>
  <div class="errors-box">
    <h4>消息提示：</h4>
    <ul>
      <li><%= flash[:notice]%></li>
    </ul>
  </div>
  <% end %>
  <div class="control-group">
    <label for="" class="control-label">用户名</label>
    <div class="controls"><%= text_field_tag :username,nil%></div>
    </div>
  <div class="control-group">
    <label for="" class="control-label">密码</label>
    <div class="controls"><%= password_field_tag :password,nil%></div>
    </div>
  
  <div class="form-actions">
    <%= button_tag "提交",:class=>'btn btn-primary' %>
    <%= link_to '注册','',:class => 'btn'%>
  </div>
<% end %>
</div>