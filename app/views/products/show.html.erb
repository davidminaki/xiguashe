<div class="home-index">
  <div class="row">
    <div class="col-xs-12">
      <div class="good">
        <div id="carousel-example-generic" class="carousel slide good-pic" data-ride="carousel">
          <%= render partial: 'carousel', locals: {product: @product } %>
        </div>
        <div class="good-info">
          <div class="sharer">
            由 <%= user_avatar_helper(@product.user) %> 发布 
            <% create_user_only @product do %>
              <%= link_to '编辑', edit_product_path(@product) %>
              <%= link_to '删除', @product, confirm: '确认删除? ', method: :delete %>
            <% end %>
          </div>
          <h3><%= @product.title %></h3>
    
          <%= link_to '去购买',@product.url,class: 'btn btn-primary', target:'_blank'%>
          <span class="price"><%= number_to_currency @product.price, unit: @product.money_logo %></span>
          

           <blockquote>
            <h4>发布者评价：</h4>
            <%= @product.appraisal %>
          </blockquote>

           <!-- JiaThis Button BEGIN --><div id="ckepop">
              <span class="jiathis_txt">分享到：</span>
              <a class="jiathis_button_weixin">微信</a> 
            </div> <!-- JiaThis Button END -->
        </div>

        <div class="c"></div>
        
        <!-- <div class="good-content">
          <blockquote>
            <%= @product.appraisal %>
          </blockquote>
        </div> -->
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-xs-12">
    <div class="actions">
      <div class="actions-content">
        <%= render partial: 'comments/new_comment', locals: { item: @product } %>
        <%= render partial: 'comments/comments', collection: @comments, as: :comment %>
      </div>
    </div>
  </div>
</div>
