<div class="home-index">
  <div class="row">
    <div class="col-xs-12">
      <div class="good">
        <div id="carousel-example-generic" class="carousel slide good-pic" data-ride="carousel">
          <%= render partial: 'carousel', locals: {product: @product } %>
        </div>
        <div class="good-info">
          <div class="sharer">
            由 <%= @product.user.nickname %> 发布 
            <% if current_user == @product.user %>
              <%= link_to '修改东西', edit_product_path(@product) %>
            <% end %>
          </div>
          <h3><%= @product.title %></h3>
          <%= link_to '去购买', @product.url, class: "btn btn-primary",target: '_blank' %>
        </div>
        <div class="c"></div>
        <hr>
        <h4 class="act-descrip"></h4>
        <div class="good-content">
          <blockquote>
            <%= @product.appraisal %>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-xs-12">
    <div class="actions">
      <div class="actions-content">
        <%= render partial: 'comments/new_comment', locals: { item: @product } %>
        <%= render partial: 'comments/comments', collection: @comments, as: :comment %>
      </div>
    </div>
  </div>
</div>
