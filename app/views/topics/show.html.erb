
<p class="lead">
	<%=@topic.title%>
</p>

<p>
	<%=raw @topic.content%>
</p>

<hr>

<p class="lead">共收到<span id="comments-size"><%= @topic.reply_num %></span>评论</p>

<hr>

<% if notice %>
	<div class="alert alert-success">
	    <%=flash[:notice]%>
	</div>
<% end -%>

<div class="comments">
	<% if @comments.size > 0 %>
		<% @comments.each do |comment| %>
			<%= render 'comments/comments', :c => comment %>
		<% end -%>
	<% end -%>
</div>



<%= render 'comments/new_comment', :item => @topic %>




