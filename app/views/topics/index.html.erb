<%= stylesheet('bootstrap','style','group')%>
<div id="main">
<div  class="container">
	<div class="comm-left">
		<div class="group-info cc">
			<div class="group-logo">
				<a href="">
					<%= image_tag 'g.jpg',:alt => @group.name %>
				</a>
			</div>
			<div class="group-detail">
				<h4><%= @group.name%></h4>
				<p>成员：100</p>
				<p>话题：100</p>
				<p>简介：<%= @group.descrip%></p>
			</div>
			<% if @gu %>
					<%= link_to '退出小组', leave_group_path(@group), class: 'btn btn-success group-join' %>
					<% if @gu.level == 0 && (@gu.status == 0 || @gu.status == 3) %>
						<%= link_to '申请管理员',apply_group_path(@group) %>
					<% end -%>
					<% if @gu.level == 2 %>
						<%= link_to '查看申请管理员列表', applyers_group_path(@group) %>
					<% end -%>
			<% else %>
				<%= link_to '加入小组', join_group_path(@group), class: 'btn btn-success group-join'%>
			<% end %>
			
		</div>

		<div class="topic-list">
			<ul>
				<% @topics.each_with_index do |topic, i| %>
					<% if i%2 == 0 %>
						<li >
							<h2><%= link_to topic.title, topic_path(topic) %></h2>
							<div class="content">
							
								<p><%= raw topic.content %></p>
							</div>
							<div class="topic-footer">
								<div class="user">
									<a href="">
									<%if topic.user.icon.exists? %>
							        	<%= image_tag topic.user.icon.url(:thumb) ,:alt => topic.user.nickname%>
							      	<%else%>
							        	<%= image_tag 'avatar.jpg' ,:alt => topic.user.nickname %>
							      	<%end%></a>

									<a href=""><%= topic.user.nickname %></a>
								</div>
								<div class="counter">
									<span title="浏览数" class="viewer-num">
										<i class="ico"></i>
										<span><%= topic.hit_num %></span>
									</span>
									<span title="喜欢数" class="liked-num">
										<i class="ico"></i>
										<span>1</span>
									</span>
									<span title="评论数" class="comments-num">
										<i class="ico"></i>
										<span><%= topic.comments.count %></span>
									</span></div>
								<div class="c"></div>
							</div>
						</li>
					<% else %>
						<li class="nm">
							<h2>
								<%= link_to topic.title, topic_path(topic) %>
							</h2>
							<div class="content">
							
								<p>
									<%= raw topic.content%>
								</p>

							</div>
							<div class="topic-footer">
								<div class="user">
									<a href=""><%= image_tag topic.user.icon.url(:thumb),:alt => 'wiki' ,:title => 'wiki'%></a>
									<a href=""><%= topic.user.nickname %></a>
								</div>
								

								<div class="counter">
									<span title="浏览数" class="viewer-num">
										<i class="ico"></i>
										<span><%= topic.hit_num %></span>
									</span>
									<span title="喜欢数" class="liked-num">
										<i class="ico"></i>
										<span>1</span>
									</span>
									<span title="评论数" class="comments-num">
										<i class="ico"></i><span><%= topic.comments.count %></span>
									</span>
								</div>
								<div class="c"></div>
							</div>
						</li>
					<% end -%>
				<% end -%>
			</ul>
		</div>
	</div>
	<div class="comm-right">

		<div class="group-members">
			<h4>小组创始人</h4>
			<div class="content cc">
				<ul>
					<li>
						<%if @creater.icon.exists? %>
					        <%= image_tag @creater.icon.url(:thumb) ,:alt => @creater.nickname%>
					    <%else%>
					        <%= image_tag 'avatar.jpg' ,:alt => @creater.nickname%>
					    <%end%>
						<p><%= @creater.nickname %></p>
					</li>
				</ul>
			</div>
		</div>

		<div class="group-members">

			<h4>小组管理员</h4>
			<div class="content cc">
				<ul>
					<% @managers.each do |manager| %>
					<li>
						<% if manager.icon.exists? %>
							<%= image_tag manager.icon.url(:thumb),:alt => manager.nickname, :title => manager.nickname %>
						<% else %>
							<%= image_tag 'avatar.jpg' ,:alt => @creater.nickname%>
						<% end -%>
						
						<p><%= manager.nickname %></p>
					</li>
					<% end -%>
						
				</ul>
			</div>
		</div>

		<div class="group-members">
			<h4>活跃成员</h4>
			<div class="content cc">
				<ul>
					<li><a href="">
						<%= image_tag 'avatar.jpg',:alt => 'wiki' ,:title => 'wiki'%>
						<p>wiki</p></li>
					<li><a href="">
						<%= image_tag 'avatar.jpg',:alt => 'wiki' ,:title => 'wiki'%>
						<p>wiki</p></li>
					<li><a href="">
						<%= image_tag 'avatar.jpg',:alt => 'wiki' ,:title => 'wiki'%>
						<p>wiki</p></li>
					<li><a href="">
						<%= image_tag 'avatar.jpg',:alt => 'wiki' ,:title => 'wiki'%>
						<p>wiki</p></li>	
				</ul>
			</div>
		</div>

		<div class="group-members">
			<h4>最新加入</h4>
			<div class="content cc">
				<ul>
					<% @members.each_with_index do |member, i| %>
						<% if i > 4 %>
							<% break %>
						<% else %>
							<li>
								<% if member.icon.exists? %>

									<%= image_tag member.icon.url(:thumb),:alt => member.nickname ,:title => member.nickname %>
								<% else %>
									<%= image_tag 'avatar.jpg' ,:alt => member.nickname%>

								<% end -%>

								<p><%= member.nickname %></p>
							</li>
						<% end %>
					<% end %>
				</ul>
			</div>
		</div>

		<div class="side-ad mt10"><a href=""><%= image_tag 'ad.jpg' ,:alt => 'ad..'%></a></div>

		</div>
	</div>
</div>
</div>