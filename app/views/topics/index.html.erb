		<div class="group-members">
			<h4>最新加入</h4>
			<div class="content cc">
				<ul>
					<% if @members != nil %>
						<% @members.each do |member| %>
							<li>
								<% if member.icon.exists? %>

									<%= link_to (image_tag member.icon.url(:thumb),:alt => member.nickname ,:title => member.nickname), member %>
								<% else %>
									<%= link_to (image_tag 'avatar.jpg' ,:alt => member.nickname), member %>

