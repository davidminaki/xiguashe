<%= stylesheet('bootstrap','style','group')%>
<div id="main">
<div  class="container">
	<div class="comm-left">
		<div class="group-info cc">
			<div class="group-logo">
				<a href=""><img src="img/g.jpg" alt=""></a>
			</div>
			<div class="group-detail">
				<h4><%= @group.name%></h4>
				<p>成员：100</p>
				<p>话题：100</p>
				<p>简介：<%= @group.descrip%></p>
			</div>
			<%= link_to '加入小组', join_group_path(@group), class: 'btn btn-success group-join'%>
		</div>

		<div class="topic-list">
			<ul>
				<% @topics.each_with_index do |topic, i| %>
					<% if i%2 == 0 %>
						<li >
							<h2><%= link_to topic.title, topic_path(topic) %></h2>
							<div class="content">
							
								<p><%= raw topic.content %></p>
							</div>
							<div class="topic-footer">
								<div class="user">
									<a href=""><img src="img/avatar.jpg" alt=""></a>
									<a href=""><%= topic.username%></a>
								</div>
								<div class="counter">
									<span title="浏览数" class="viewer-num">
										<i class="ico"></i>
										<span><%= topic.hit_num %></span>
									</span>
									<span title="喜欢数" class="liked-num">
										<i class="ico"></i>
										<span>1</span>
									</span>
									<span title="评论数" class="comments-num">
										<i class="ico"></i>
										<span><%= topic.comments.count %></span>
									</span></div>
								<div class="c"></div>
							</div>
						</li>
					<% else %>
						<li class="nm">
							<h2>
								<%= link_to topic.title, topic_path(topic) %>
							</h2>
							<div class="content">
							
								<p>
									<%= raw topic.content%>
								</p>

							</div>
							<div class="topic-footer">
								<div class="user">
									<a href=""><img src="img/avatar.jpg" alt=""></a>
									<a href=""><%= topic.username %></a>
								</div>
								

								<div class="counter">
									<span title="浏览数" class="viewer-num">
										<i class="ico"></i>
										<span><%= topic.hit_num %></span>
									</span>
									<span title="喜欢数" class="liked-num">
										<i class="ico"></i>
										<span>1</span>
									</span>
									<span title="评论数" class="comments-num">
										<i class="ico"></i><span><%= topic.comments.count %></span>
									</span>
								</div>
								<div class="c"></div>
							</div>
						</li>
					<% end -%>
				<% end -%>
			</ul>
		</div>
	</div>
	<div class="comm-right">
		
		<div class="group-members">
